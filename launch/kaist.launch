<launch>

  <rosparam command="load" file="$(find direct_stereo_slam)/cams/kaist/T_stereo.yaml" ns="direct_stereo_slam"/>

  <node name="direct_stereo_slam" pkg="direct_stereo_slam" type="so_dso_node" output="screen">
    <param name="cam0_topic" value="/left/image_raw" />
    <param name="cam1_topic" value="/right/image_raw" />
    <param name="calib0" value="$(find direct_stereo_slam)/cams/kaist/camera0.txt" />
    <param name="calib1" value="$(find direct_stereo_slam)/cams/kaist/camera1.txt" />
    <param name="init_scale" value="20.0" />
    <param name="lidar_range" value="45.0" />
    <param name="voxel_angle" value="1.0" />
    <param name="mode" value="1" />
    <param name="preset" value="2" />
  </node>

  </launch>
